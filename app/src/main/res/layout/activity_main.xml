<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnCustomGridSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Custom GridSize" />

    <Button
        android:id="@+id/btnToggleGridScaleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="192dp"
        android:text="Hide grid scale" />

    <Button
        android:id="@+id/btnCustomGridScaleStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="192dp"
        android:text="Custom GridScale" />

    <Button
        android:id="@+id/btnToggleMapType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:text="Toggle MapType" />

    <Button
        android:id="@+id/btnCenterGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="16dp"
        android:text="Center grid" />


    <com.catleader.ling_grid_view.LingGridView
        android:id="@+id/lingGridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:gridBgColor="#3200BAF1"
        app:gridLineColor="#FFFFFFFF"
        app:gridColumnCount="16"
        app:gridRowCount="16"
        app:showGridScaleLabel="true"
        app:gridScaleStep="4"/>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />


</FrameLayout>

